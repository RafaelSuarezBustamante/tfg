#interface_7inch.kv

<Interface_7inch>:


    # Color de fondo para la aplicacion
    canvas:
        Color:
            rgb: .7,.3,.7
        Rectangle:
            size: root.width,root.height
            pos: 0,0

    # Se crean tres circulos para mostrar donde se ha producido el toque
        Color:
            rgb: 0, 0, 1
        Ellipse:
            pos: (root.coordenadas[0][0]-10,root.coordenadas[0][1]-10)
            size: 20,20
        Color:
            rgb: 0, 0, 1
        Ellipse:
            pos: (root.coordenadas[1][0]-10,root.coordenadas[1][1]-10)
            size: 20,20
        Color:
            rgb: 0, 0, 1
        Ellipse:
            pos: (root.coordenadas[2][0]-10,root.coordenadas[2][1]-10)
            size: 20,20

    # Etiqueta para mostrar la identificacion del toque realizado
    Label:
        pos: root.coordenadas[0][0],root.coordenadas[0][1]
        text: str(root.coordenadas[0][2])
        font_size: 20
        markup: True
    Label:
        pos: root.coordenadas[1][0],root.coordenadas[1][1]
        text:str(root.coordenadas[1][2])
        font_size: 20
        markup: True
    Label:
        pos: root.coordenadas[2][0],root.coordenadas[2][1]
        text:str(root.coordenadas[2][2])
        font_size: 20
        markup: True
    

    ## Datos IMU MPU9250

    #Datos acelerometro
    Label:
        pos: 300,115
        text: 'Datos acelerometro'
        font_size: 20
        markup: True
    Label:
        pos: 300,95
        text: str(root.mpu9250_datos[1])
        font_size: 20
        markup: True

    #Datos giroscopio
    Label:
        pos: 300,160
        text: 'Datos giroscopio'
        font_size: 20
        markup: True

    Label:
        pos: 300,140
        text: str(root.mpu9250_datos[2])
        font_size: 20
        markup: True

    #Datos Magnetometro
    Label:
        pos: 300,200
        text: 'Datos magnetometro'
        font_size: 20
        markup: True

    Label:
        pos: 300,180
        text: str(root.mpu9250_datos[3])
        font_size: 20
        markup: True



    # Boton para salir de la aplicacion
    Button:
        text: 'Salir'
        font_size: 20
        size_hint: [1.1,.7]
        on_press: root.salir()
        on_press: app.get_running_app().stop()
        pos: 0,250

    # Etiqueta con el nombre de la aplicacion
    Label:
        pos: 300,root.top-100
        text:'Pruebas localizacion 2'
        font_size: 40
        markup: True

    # Etiqueta que muestra el estado de conexion con el cliente
    Label:
        pos: 150,20
        #text: 'conect'
        text: str(root.conect)
        font_size: 20
        markup: True

    
