#:import Factory kivy.factory.Factory


Itanium:
    name: "PantallaJuego2"
    id: PantallaJuego2
    fullscreen: True
    canvas.before:
        Rectangle:
            size: self.size
            source: 'data/fondos/fondo_amarillo.jpg'

    Juego2:
        id: juego2
            



<Pieza_cuadrado>:
    size: 95,40
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size

<Juego2>:
    id: juego2
    #size: 800, 380
    size: self.size
    canvas:
        Color:
            rgb: 1,0,0

    Button:
        text: 'Izquierda'
        pos:0,0
        on_press: root.mover_izquierda()
    Button:
        text: 'Derecha'
        pos:0,100
        on_press: root.mover_derecha()
    Button:
        text: 'Arriba'
        pos:0,200
        on_press: root.mover_arriba()
    Button:
        text: 'Abajo'
        pos:0,300
        on_press: root.mover_abajo()
    Button:
        text: 'AÃ‘ADIR PIEZA +'
        pos:0,400
