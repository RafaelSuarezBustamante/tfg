#:import Factory kivy.factory.Factory

<Boton@Button>:
    text:''
    #background_color: (.5,0.5 ,0.5,1) #if self.state =='normal' else (1,0,0,1) 
    #background_normal: ''
    #background_disabled_normal:''
    font_size: 73
    size_hint: [.15,.15]
    disabled: True


Itanium:
    name: "PantallaJuego1"
    id: PantallaJuego1
    fullscreen: True
    canvas.before:
        Rectangle:
            size: self.size
            source: 'data/fondos/fondo_amarillo.jpg'
                
    Matriz_juego:
        id: matriz


<Aviso1>:
    id: aviso1
    size: 800,400
    canvas.before:
        Color:
            rgb: .7,.7,.7
        Rectangle:
            pos: 0,0
            size: self.size
    Label:
        text: 'Situe el widget sobre la pantalla'
        pos: 300,300
        font_size: 40

<Cuadrado>:
    id: cuadrado
    size: 100,60
    canvas.before:
        Color:
            rgb: .75, 0, 0
        Rectangle:
            pos: self.x-45, self.y-30
            size: 100,60



<Matriz_juego>:
    

    GridLayout:
        cols: 4
        spacing: 20
        padding: [20,10]
        size: 800,330
        #orientation: 'lr-tb'
        
        canvas.before:
            PushMatrix:      
            Scale:
                xyz: 1,1,0
            Translate:
                #xy: -root.width/4,-root.height/4
                xy: root.posiciones_widget[0],root.posiciones_widget[1]
#FILA 1         
