#:import Factory kivy.factory.Factory

<Boton@Button>:
    text:''
    #background_color: (.5,0.5 ,0.5,1) #if self.state =='normal' else (1,0,0,1) 
    #background_normal: ''
    #background_disabled_normal:''
    size_hint: [.15,.15]

<Boton_menu@Button>:
    #background_color: (1,1 ,0.5,1) if self.state =='normal' else (1,0,0,1) 
    #background_normal: ''
    #background_disabled_normal:''
    #background_down: ''
    size_hint: None, None
    size: 150, 80



Menu:
    name: "PantallaJuego1"
    fullscreen: True
    canvas.before:
        Rectangle:
            size: self.size
            source: 'data/fondos/fondo_amarillo.jpg'
                
    Matriz_juego:



<Cuadrado>:
    size: 70,70
    canvas.before:
        Color:
            rgb: .75, 0, 0
        Rectangle:
            pos: self.pos
            size: 70,70

<Ball>:
    size: 40,40
    canvas.before:
        Color:
            rgb: .75, 0, 0
        Ellipse:
            pos: self.pos
            size: 40,40

<Matriz_juego>:

    ball: ball_id
    id: line_id
    #label_widget: label_widget

    canvas.after:
        Color:
            rgb: 0,0,0
        Line:
            points: root.puntos_trayectoria
            width: 3    
    
    FloatLayout:

        Button:
            id: button_comenzar
            pos: 250,320
            size_hint: None, None
            size: '130dp', '78dp'
            background_normal: 'data/icons/boton_comenzar_juego1.png'
            disabled: True
            on_release: root.comienzo_juego()
              
        Button:
            pos: 620,320
            size_hint: None, None
            size: '130dp', '78dp'
            background_normal: 'data/icons/boton_nuevo_juego1.png'
            on_press: root.inicio(0,0,0)

        Button:
            pos: 440,320
            size_hint: None, None
            size: '130dp', '48dp'
            text: 'PAUSA'
            on_press: root.pausar_juego()

        Label:
            pos: 80,290
            text:'Juego 1'
            font_size:45
            markup: True
       

