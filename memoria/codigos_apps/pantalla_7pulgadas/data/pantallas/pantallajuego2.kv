#:import Factory kivy.factory.Factory


Itanium:
    name: "PantallaJuego2"
    id: PantallaJuego2
    fullscreen: True
    canvas.before:
        Rectangle:
            size: self.size
            source: 'data/fondos/fondo_amarillo.jpg'

    Juego2:
        id: juego2
            
<Lineas>:
    size: 800,400

<Barrera_izquierda>:
    id: barrera_izq_id
    size: 4,380
    canvas.after:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: 0,0

<Barrera_derecha>:
    size: 4,380
    canvas.after:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: 800,0

<Barrera_arriba>:
    size: 800,4
    canvas.after:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos:0,400
            

<Barrera_abajo>:
    size: 800,4
    canvas.after:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: 0,0


<Pieza_cuadrado>:
    size: 95,40
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size

<Pieza_triangulo>:
    size: 100,100
    pos: self.pos
    canvas.after:

    #size: self.size
    #pos: self.pos

<Juego2>:
    #size: 800, 380
    size: self.size
    canvas:
        Color:
            rgb: 1,0,0
