        #    cap: 'square'

    Button:
        text: 'Izquierda'
        pos:0,0
        on_press: root.mover_izquierda()
    Button:
        text: 'Derecha'
        pos:0,100
        on_press: root.mover_derecha()
    Button:
        text: 'Arriba'
        pos:0,200
        on_press: root.mover_arriba()
    Button:
        text: 'Abajo'
