#:import Factory kivy.factory.Factory


Itanium:
    name: "PantallaJuego3"
    id: PantallaJuego3
    fullscreen: True
    canvas.before:
        Rectangle:
            size: self.size
            source: 'data/fondos/fondo_juego3.jpg'

    Juego3:
        id: juego3




<Pieza_cuadrado>:
    size: 95,40
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size

<Pieza_retroalim>:
    #size: 95,40
    canvas.after:
        Ellipse:
            pos: self.pos
            size: self.size

<Pieza_muros>:
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size

<Juego3>:
	size: self.size

    Button:
        text: 'Comenzar'
        pos:657,270
        size: 100,70
        on_press: root.comienzo_secuencia()

    Button:
        text: 'Finalizar'
        pos:657,230
        size: 100,70
        on_press: root.finalizar()
    
    Button:
        text: 'Ejemplo'
        pos:657,180
        size: 100,70
        on_press: root.ejemplo()       
